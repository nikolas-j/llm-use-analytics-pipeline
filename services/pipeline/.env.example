# LLM Classification Pipeline Configuration
# Copy this to .env and customize for your environment

# Storage backend: local or s3
STORAGE=local

# Date to process (YYYY-MM-DD format)
# Defaults to today if not set
DATE=2026-01-03

# === Local Storage Configuration ===
# Path relative to services/pipeline/ directory
BASE_PATH=../../local_data_IO

# === S3 Storage Configuration ===
# Uncomment and configure when using STORAGE=s3
# S3_BUCKET=my-llm-logs-bucket
# AWS_REGION=us-east-1

# === Pipeline Options ===
# Write sanitized events to storage (creates extra output files)
WRITE_SANITIZED=false

# Logging level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# === LLM Classification (Amazon Bedrock) ===
# Enable/disable LLM classification
# Set to false to bypass LLM calls and return "Unclassified" (saves costs during testing)
LLM_CLASSIFICATION=true

# Bedrock configuration
BEDROCK_REGION=eu-north-1
BEDROCK_MODEL_ID=eu.amazon.nova-micro-v1:0

# Performance tuning (optional - defaults are optimized for low latency)
BEDROCK_CONNECT_TIMEOUT=2
BEDROCK_READ_TIMEOUT=5
BEDROCK_MAX_RETRIES=2